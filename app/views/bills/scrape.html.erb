<div class="bg-gray-100 overflow-x-hidden">
    <div class="px-6 py-8">
        <div class="flex justify-between container mx-auto">
            <div class="">
                <div class="flex items-center justify-between">
                    <h1 class="text-xl font-bold text-gray-700 md:text-2xl">Results:</h1>
                    <%= link_to "New Search", root_path, class: "btn btn-md btn-secondary" %>
                </div>
                <% if @response.present? %>
                    <% @response.each do |result| %>
                    <div class="mt-6 mb-2">
                    <!-- Div de resultados -->
                            <div class="max-w-4xl px-10 py-6 bg-white rounded-lg shadow-md">
                                <div class="flex justify-between items-center">
                                <span class="font-light text-gray-600"><%= result.timestamp %></span>
                                    <a href="#" class="px-2 py-1 bg-gray-600 text-gray-100 font-bold rounded hover:bg-gray-500"><%= result.localization %></a>
                                </div>
                                <div class="mt-2"><a href="#" class="text-2xl text-gray-700 font-bold hover:underline"><%= result.title %></a>
                                    <p class="mt-2 text-gray-600"><%= result.summary %></p>
                                    <small>Status: <%= result.status %></small>
                                </div>
                                <div class="flex justify-between items-center mt-4"><a href=<%= result.link %>
                                        class="text-blue-500 hover:underline">Read more</a>
                                    <div>
                                        <a href="#" class="flex items-center"><img
                                                    src="https://www.novohamburgo.rs.gov.br/sites/pmnh/files/paragrafo/2018-04/brasao-NH.jpg"
                                                    alt="avatar" class="mx-4 w-10 h-10 object-cover rounded-full hidden sm:block">
                                                <h1 class="text-gray-700 font-bold hover:underline"><%= result.author %></h1>
                                        </a>
                                    </div>
                                    <% if current_user %>
                                        <%= link_to "Save Record", bills_path(bill: result.as_json), method: "POST", class: "btn btn-sm btn-success" %>
                                    <% else %>
                                        <%= link_to "Login to Save", bills_path(bill: result.as_json), method: "POST", class: "btn btn-sm btn-success" %>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    <% end%>
                <% end %>
                <div class="mt-8">
                    <div class="flex">
                        <a href="#" class="mx-1 px-3 py-2 bg-white text-gray-500 font-medium rounded-md cursor-not-allowed">
                            previous
                        </a>
                    
                        <a href="#" class="mx-1 px-3 py-2 bg-white text-gray-700 font-medium hover:bg-blue-500 hover:text-white rounded-md">
                            1
                        </a>
                    
                        <a href="#" class="mx-1 px-3 py-2 bg-white text-gray-700 font-medium hover:bg-blue-500 hover:text-white rounded-md">
                            2
                        </a>
                    
                        <a href="#" class="mx-1 px-3 py-2 bg-white text-gray-700 font-medium hover:bg-blue-500 hover:text-white rounded-md">
                            3
                        </a>
                    
                        <a href="#" class="mx-1 px-3 py-2 bg-white text-gray-700 font-medium hover:bg-blue-500 hover:text-white rounded-md">
                            Next
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>

<!-- Page Header component -->
