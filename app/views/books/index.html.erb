<div class="container mt-4">


  <div class="row mb-3">
    <div class="col-sm-6">
      <h1>My Handouts</h1>
    </div>

    <div class="col-sm-6 text-right">
    <%= link_to new_book_path, class: 'btn btn-primary' do %>
      Add New Book
    <% end %>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
      

              <th>Category</th>
              <th>Topic</th>
              <th>Title</th>
              <th>Author</th>
              <th>User</th>
              
            <th></th>
          
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
          <%= content_tag :tr, id: dom_id(book), class: dom_class(book) do %>
            

                        <td><%= book.category %></td>
                        <td><%= book.topic %></td>
                        <td><%= book.title %></td>
                        <td><%= book.author %></td>
                        <td><%= book.user %></td>
            
            
              <td><%= link_to 'Show', book %></td>
            
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= render partial: 'table', locales: { books: @books } %>
</div>