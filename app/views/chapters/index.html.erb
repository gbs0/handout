


<div class="row">
  <div class="col-sm-6">
    <h1>Chapters</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_chapter_path, class: 'btn btn-primary' do %>
    Add New Chapter
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Title</th>
            <th>Description</th>
            <th>Content</th>
            <th>Author</th>
            <th>Book</th>
            <th>User</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @chapters.each do |chapter| %>
        <%= content_tag :tr, id: dom_id(chapter), class: dom_class(chapter) do %>
          

                      <td><%= chapter.title %></td>
                      <td><%= chapter.description %></td>
                      <td><%= chapter.content %></td>
                      <td><%= chapter.author %></td>
                      <td><%= chapter.book %></td>
                      <td><%= chapter.user %></td>
          
          
            <td><%= link_to 'Show', chapter %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
