<div class="page-header">
  <%= link_to chapters_path, class: 'btn btn-default' do %>
    All Chapters
  <% end %>
  <%= link_to edit_chapter_path(@chapter), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Show chapter</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @chapter.title %></dd>

  <dt>Description:</dt>
  <dd><%= @chapter.description %></dd>

  <dt>Content:</dt>
  <dd><%= @chapter.content %></dd>

  <dt>Author:</dt>
  <dd><%= @chapter.author %></dd>

  <dt>Book:</dt>
  <dd><%= @chapter.book %></dd>

  <dt>User:</dt>
  <dd><%= @chapter.user %></dd>

</dl>
